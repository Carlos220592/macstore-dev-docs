<link rel="stylesheet" href="/src/vendor/alertify/alertify.css" />
<script is:inline src="/src/vendor/alertify/alertify.js"></script>

<button type="button" id="alertNotify" class="button-play" title="Visualizar">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path fill="#65a30d" d="M8 5.14v14l11-7z"/></svg>
</button>

<script>
    const swalPlay = document?.querySelector('#alertNotify');
    swalPlay?.addEventListener('click', () => {
        alertify.set('notifier', 'position', 'bottom-right');
        alertify.notify('¡Notificación!', 1000);
    });
</script>
